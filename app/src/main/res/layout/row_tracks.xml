<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- Date -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="jj/MM/yy  hh:mm"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/txtView_StartDate"

        />


    <!-- NB -->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NB"
        android:id="@+id/txtView_NB"
        android:textStyle="bold"
        android:layout_below="@+id/txtView_EndDate"
        android:layout_alignParentEnd="true" />

    <!-- EndDate -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="jj/MM/yy  hh:mm"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/txtView_EndDate"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <!-- TrackingID -->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SessionId"
        android:id="@+id/txtView_TrackingId"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/txtView_NB"
        android:layout_alignParentStart="true" />


</RelativeLayout>