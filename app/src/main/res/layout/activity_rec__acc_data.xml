<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rec__acc_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.kriket.oso.view.activity.RecAccdata">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_title">

        <TextView
            android:text="accX:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="1" />

        <TextView
            android:text="accY:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="1" />

        <TextView
            android:text="accZ:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="13dp"
        android:layout_below="@+id/linearLayout_title"
        android:layout_alignParentStart="true">

        <TextView
            android:text="txtV_accX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtV_accX"
            android:layout_weight="1" />

        <TextView
            android:text="txtV_accY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtV_accY"
            android:layout_weight="1" />

        <TextView
            android:text="txtV_accZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtV_accZ"
            android:layout_weight="1" />
    </LinearLayout>

    <CheckBox
        android:text="Record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:id="@+id/chckBx_record"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Save Accel data "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_start_rec_acc"
        android:layout_marginEnd="57dp"
        android:layout_alignTop="@+id/chckBx_record"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
